extends layout

block content
    h1.text-center Login
    form(action="login", method="post")
        .form-group
            label(for="username") Username
            input.form-control(type="text", name="username", id="username", required)
        .form-group
            label(for="password") Password
            input.form-control(type="password", name="password", id="password", required)
        .form-group
            input.btn.btn-primary.form-control(type="submit", name="submit", value="Login")
    if msg
        if msg.status == "error"
            .alert.alert-danger(role="alert")= msg.text
        else if msg.status == "success"
            .alert.alert-success(role="alert")= msg.text
        
